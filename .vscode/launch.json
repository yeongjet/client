    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Server",
            "cargo": {
                "args": [
                    "build",
                    "--package=server"
                ],
                // "filter": {
                //     "name": "a",
                //     "kind": "example"
                // }
            },
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "args": [
                "-a",
                "192.168.1.1",
                "-p",
                "54321"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}